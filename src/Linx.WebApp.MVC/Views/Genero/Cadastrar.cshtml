@model Linx.WebApp.MVC.ViewModels.GeneroViewModel

@{
    ViewData["Title"] = "Cadastrar";
}

<h2>Cadastrar Gênero</h2>
<hr />

<vc:Summary></vc:Summary>

<div class="row">
    <div class="col-md-12">
        <form asp-action="Cadastrar">
            <div class="grupo-input">
                <label asp-for="Nome"></label>
                <input asp-for="Nome" class="input" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="grupo-botao">
                <input type="submit" value="Salvar" class="botao botao-verde mr-1" />
                <a asp-action="Index" class="botao botao-vermelho">Voltar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
