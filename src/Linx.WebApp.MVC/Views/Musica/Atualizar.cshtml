@model Linx.WebApp.MVC.ViewModels.MusicaViewModel

@{
    ViewData["Title"] = "Atualizar";
}

<h2>Atualizar Música</h2>
<hr />

<vc:Summary></vc:Summary>

<div class="row">
    <div class="col-md-12">
        <form asp-action="Atualizar">
            <input type="hidden" asp-for="Id"  />
            <div class="grupo-input">
                <label asp-for="Titulo"></label>
                <input asp-for="Titulo" class="input" />
                <span asp-validation-for="Titulo" class="text-danger"></span>
            </div>
            <div class="grupo-input">
                <label asp-for="Idioma"></label>
                <select asp-for="Idioma" class="input" value="@Model.Idioma">
                    <option value="1">Inglês</option>
                    <option value="2">Português</option>
                </select>
                <span asp-validation-for="Idioma" class="text-danger"></span>
            </div>
            <div class="grupo-input">
                <label asp-for="AlbumId">Álbum</label>
                <select asp-for="AlbumId" asp-items="@Model.Albuns" class="input"></select>
                <span asp-validation-for="AlbumId" class="text-danger"></span>
            </div>
            <div class="grupo-input">
                <label asp-for="GeneroId" class="control-label">Gênero</label>
                <select asp-for="GeneroId" asp-items="@Model.Generos" class="input"></select>
                <span asp-validation-for="GeneroId" class="text-danger"></span>
            </div>
            <div class="grupo-botao">
                <input type="submit" value="Salvar" class="botao botao-verde mr-1" />
                <a asp-action="Index" class="botao botao-vermelho">Voltar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
